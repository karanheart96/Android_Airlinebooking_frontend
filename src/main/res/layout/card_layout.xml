<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="67dp">

    <android.support.v7.widget.CardView
            android:background="@color/airlineRowBackgroundColor"
            android:layout_height="67dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.056"
            app:cardBackgroundColor="@color/airlineRowBackgroundColor"
            android:layout_width="match_parent">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:text="TextView"
                    android:layout_width="146dp"
                    android:layout_height="39dp" android:id="@+id/airline_ID" tools:text="Airline"
                    android:textSize="18sp" android:textColor="@color/airlineRowTextColor"
                    android:layout_toEndOf="@+id/iamge_ID" android:layout_toRightOf="@+id/iamge_ID"
                    android:layout_marginLeft="37dp" android:layout_marginStart="37dp"
                    android:layout_alignTop="@+id/iamge_ID" android:layout_marginTop="21dp"/>
            <ImageView
                    android:layout_width="62dp"
                    android:layout_height="wrap_content" app:srcCompat="@mipmap/ic_launcher"
                    android:id="@+id/iamge_ID"
                    android:layout_alignParentStart="true" android:layout_marginLeft="23dp"
                    android:layout_marginStart="23dp" android:layout_alignParentLeft="true"
                    android:layout_marginTop="0dp" android:layout_alignParentTop="true"/>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/endofline"
                    android:layout_marginBottom="-7dp"
                    android:layout_alignBottom="@+id/airline_ID"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>